<Window x:Class="AdminPanel.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" 
        Height="520" 
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource AccentBrush}"
            CornerRadius="10"
            Padding="20"
            Margin="10">
        <StackPanel>
            <TextBlock Text="Добавить пользователя" 
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Имя*"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Фамилия*"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Email*"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Телефон*"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Пароль* (минимум 6 символов)"/>
            <PasswordBox x:Name="passwordBox" 
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Сила пароля: "/>
                <TextBlock x:Name="passwordStrengthText" Margin="5,0,10,0"/>
                <ProgressBar x:Name="passwordStrengthBar" 
                             Minimum="0" 
                             Maximum="100" 
                             Height="10" 
                             Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" 
                        Command="{Binding AddUserCommand}"
                        Width="120"/>

                <Button Content="Отмена" 
                        Command="{Binding CancelCommand}"
                        Width="120"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>