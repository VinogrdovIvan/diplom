<Window x:Class="AdminPanel.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AdminPanel.ViewModels"
        Width="400"
        Height="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource {x:Type Window}}">

    <Grid Background="{StaticResource PrimaryDarkBrush}">
        <Border Background="White"
                CornerRadius="10"
                Padding="30"
                Width="350"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Email" Foreground="{StaticResource DarkTextBrush}"/>
                <TextBox Text="{Binding Email}" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Пароль" 
                           Foreground="{StaticResource DarkTextBrush}"
                           Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Margin="0,0,0,20"/>

                <Button Content="Войти" 
                        Command="{Binding LoginCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,0"
                        Height="40"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>